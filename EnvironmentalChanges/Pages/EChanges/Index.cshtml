        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypesOfWeather)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeatherTiming)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodInWeather)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WeatherGarments)
            </td>
